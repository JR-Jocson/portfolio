---
import Layout from '../layouts/Layout.astro';
import { getAssetPath } from '../utils/paths.js';
---

<Layout title="John Rafael L. Jocson | Portfolio">
  <div class="min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-800">
    <!-- Navigation -->
    <header class="sticky top-0 z-50 bg-gradient-to-r from-black/90 to-gray-900/90 backdrop-blur-sm border-b border-gray-800">
      <nav class="container mx-auto px-6 lg:px-12 py-4">
        <div class="flex justify-between items-center">
          <!-- Logo/Name with accent -->
          <div class="group relative">
            <span class="text-2xl font-bold text-hacker-green">
              John Rafael L. Jocson
            </span>
            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-hacker-green group-hover:w-full transition-all duration-300"></span>
          </div>
          
          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="#home" class="relative group text-gray-300 hover:text-white transition-colors">
              <span class="text-hacker-green mr-1">01.</span> Home
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-hacker-green group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="#about" class="relative group text-gray-300 hover:text-white transition-colors">
              <span class="text-hacker-green mr-1">02.</span> About
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-hacker-green group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="#publications" class="relative group text-gray-300 hover:text-white transition-colors">
              <span class="text-hacker-green mr-1">03.</span> Projects
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-hacker-green group-hover:w-full transition-all duration-300"></span>
            </a>
            <a href="#contact" class="relative group text-gray-300 hover:text-white transition-colors">
              <span class="text-hacker-green mr-1">04.</span> Contact
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-hacker-green group-hover:w-full transition-all duration-300"></span>
            </a>
          </div>
          
          <!-- Mobile menu button (hidden for now) -->
          <button class="md:hidden text-gray-300 hover:text-hacker-green focus:outline-none">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <!-- Hero Section -->
    <main id="about" class="container mx-auto px-6 lg:px-12 py-16 relative">
      <!-- Background decorative elements -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-2 h-2 bg-hacker-green rounded-full animate-pulse"></div>
        <div class="absolute top-40 right-20 w-1 h-1 bg-blue-400 rounded-full animate-pulse" style="animation-delay: 1s;"></div>
        <div class="absolute bottom-40 left-1/4 w-1.5 h-1.5 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
        <div class="absolute top-1/3 right-1/3 w-1 h-1 bg-hacker-green rounded-full animate-pulse" style="animation-delay: 3s;"></div>
        
        <!-- Grid pattern overlay -->
        <div class="absolute inset-0 opacity-5">
          <div class="grid grid-cols-12 gap-4 h-full">
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
            <div class="border-r border-hacker-green/20"></div>
          </div>
        </div>
      </div>
      
      <div class="grid lg:grid-cols-2 gap-16 items-center min-h-[85vh] relative z-10">
        <!-- Left Content -->
        <div class="space-y-8">
          <div>
            <h1 class="text-6xl lg:text-8xl font-bold text-white mb-6 leading-tight">
              Hello<span class="text-hacker-green animate-pulse">.</span>
            </h1>
            <div class="h-2 w-32 bg-gradient-to-r from-hacker-green to-blue-400 mb-8 rounded-full"></div>
            <h2 class="text-3xl lg:text-4xl text-gray-300 mb-3">I'm John Rafael</h2>
            <h3 class="text-4xl lg:text-5xl font-bold mb-6">
              <span class="text-hacker-green">Computer Engineer</span>
            </h3>
            <p class="text-lg text-gray-400 max-w-lg leading-relaxed">
              Passionate about bridging hardware and software to create innovative solutions. 
              Currently building automation systems and AI-powered applications.
            </p>
          </div>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <button class="group relative overflow-hidden border-2 border-green-500 text-green-500 px-8 py-4 rounded-lg hover:text-black transition-all duration-300 text-lg">
              <span class="absolute inset-0 bg-green-500 transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"></span>
              <span class="relative flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Contact Me
              </span>
            </button>
            <a href={getAssetPath('file/John Rafael Jocson CV.pdf')} download="John_Rafael_Jocson_CV.pdf" class="group relative overflow-hidden border-2 border-blue-400 text-blue-400 px-8 py-4 rounded-lg hover:text-black transition-all duration-300 text-lg inline-block">
              <span class="absolute inset-0 bg-blue-400 transform -translate-x-full group-hover:translate-x-0 transition-transform duration-300"></span>
              <span class="relative flex items-center justify-center">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                My resume
              </span>
            </a>
          </div>

          <!-- Enhanced Tech Stack -->
          <div class="pt-8">
            <h4 class="text-hacker-green text-sm font-mono mb-4 uppercase tracking-wider">Tech Stack</h4>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-hacker-green/50 transition-all duration-300">
                <div class="w-2 h-2 bg-orange-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">HTML5</span>
              </div>
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-blue-400/50 transition-all duration-300">
                <div class="w-2 h-2 bg-blue-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">CSS</span>
              </div>
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-yellow-400/50 transition-all duration-300">
                <div class="w-2 h-2 bg-yellow-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">JavaScript</span>
              </div>
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-green-400/50 transition-all duration-300">
                <div class="w-2 h-2 bg-green-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">Node.js</span>
              </div>
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-cyan-400/50 transition-all duration-300">
                <div class="w-2 h-2 bg-cyan-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">React</span>
              </div>
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-red-400/50 transition-all duration-300">
                <div class="w-2 h-2 bg-red-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">Git</span>
              </div>
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-purple-400/50 transition-all duration-300">
                <div class="w-2 h-2 bg-purple-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">Django</span>
              </div>
              <div class="group flex items-center space-x-2 p-3 bg-gray-800/30 rounded-lg border border-gray-700/50 hover:border-pink-400/50 transition-all duration-300">
                <div class="w-2 h-2 bg-pink-500 rounded-full group-hover:animate-pulse"></div>
                <span class="text-gray-400 text-sm font-mono group-hover:text-white transition-colors">n8n</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Content - Profile Image -->
        <div class="flex justify-center lg:justify-end relative">
          <div class="relative">
            <!-- Decorative elements -->
            <div class="absolute -top-4 -left-4 w-8 h-8 border-l-2 border-t-2 border-hacker-green"></div>
            <div class="absolute -bottom-4 -right-4 w-8 h-8 border-r-2 border-b-2 border-hacker-green"></div>
            
            <!-- Profile circle with gradient background -->
            <div class="relative w-80 h-80 lg:w-96 lg:h-96">
              <div class="absolute inset-0 bg-gradient-to-br from-hacker-green to-green-600 rounded-full opacity-20"></div>
              <div class="absolute inset-4 bg-gradient-to-br from-hacker-green/30 to-transparent rounded-full"></div>
              <div class="absolute inset-8 rounded-full overflow-hidden profile-glow">
                <img 
                  src={getAssetPath('profile-picture.png')} 
                  alt="John Rafael L. Jocson" 
                  class="w-full h-full object-cover"
                />
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Services Section -->
      <section class="mt-24 grid md:grid-cols-2 gap-12">
        <!-- Left - Services -->
        <div class="space-y-8">
          <div class="flex items-center space-x-4 p-6 bg-gray-800/50 rounded-lg border-l-4 border-hacker-green">
            <div class="w-12 h-12 bg-hacker-green/20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-hacker-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
              </svg>
            </div>
            <div>
              <h4 class="text-white font-semibold">Software Development</h4>
              <p class="text-gray-400 text-sm">Building robust applications</p>
            </div>
          </div>

          <div class="flex items-center space-x-4 p-6 bg-gray-800/50 rounded-lg border-l-4 border-hacker-green">
            <div class="w-12 h-12 bg-hacker-green/20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-hacker-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <h4 class="text-white font-semibold">Hardware Integration</h4>
              <p class="text-gray-400 text-sm">Embedded systems & IoT</p>
            </div>
          </div>

          <div class="flex items-center space-x-4 p-6 bg-gray-800/50 rounded-lg border-l-4 border-hacker-green">
            <div class="w-12 h-12 bg-hacker-green/20 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-hacker-green" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h4 class="text-white font-semibold">System Design</h4>
              <p class="text-gray-400 text-sm">Architecture & optimization</p>
            </div>
          </div>
        </div>

        <!-- Right - About Me -->
        <div>
          <h2 class="text-4xl font-bold text-white mb-6">About me</h2>
          <p class="text-gray-300 mb-4 leading-relaxed">
            I started my engineering journey with a passion for technology. Through my Computer Engineering degree, 
            I learned to bridge the gap between hardware and software. Since graduating Cum Laude, this has led me to 
            pursue innovative solutions that combine both worlds, fulfilling my love for learning and building things.
          </p>
          
          <!-- Academic Achievements -->
          <div class="bg-gray-800/50 p-4 rounded-lg border-l-2 border-hacker-green mb-8">
            <h3 class="text-xl font-semibold text-white mb-2">Academic Achievements</h3>
            <ul class="space-y-2 text-gray-300">
              <li class="flex items-start">
                <svg class="w-5 h-5 text-hacker-green mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>President's Lister at Mapua Malayan Colleges Laguna (2020-2023)</span>
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 text-hacker-green mr-2 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span>Dean's Lister at Mapua Malayan Colleges Laguna (2020-2024)</span>
              </li>
            </ul>
          </div>
          
        </div>
      </section>

      <!-- Experience Section -->
      <section id="experience" class="py-16 mt-16 border-t border-gray-800/30">
        <div class="container mx-auto px-6 lg:px-12">
          <h2 class="text-3xl font-bold text-white mb-8">Work Experience</h2>
          
          <!-- Timeline container -->
          <div class="relative">
            <!-- Timeline line -->
            <div class="absolute left-0 md:left-1/2 top-0 bottom-0 w-px bg-gradient-to-b from-hacker-green/80 via-hacker-green/50 to-transparent"></div>
            
            <!-- Experience Item 1 - Playbook Sports -->
            <div class="relative mb-12">
              <div class="flex flex-col md:flex-row items-start">
                <!-- Date for mobile (left side) -->
                <div class="md:hidden mb-4 px-4 py-1 bg-gray-800/70 rounded-full text-hacker-green text-sm font-mono">
                  Jan 2025 - Current
                </div>
                
                <!-- Left column (hidden on mobile) -->
                <div class="hidden md:block md:w-1/2 pr-12 text-right">
                  <div class="px-4 py-1 inline-block bg-gray-800/70 rounded-full text-hacker-green text-sm font-mono">
                    Jan 2025 - Current
                  </div>
                </div>
                
                <!-- Timeline dot -->
                <div class="absolute left-[-8px] md:left-1/2 md:ml-[-8px] w-4 h-4 bg-hacker-green rounded-full border-4 border-gray-900 glow-dot"></div>
                
                <!-- Right column -->
                <div class="pl-8 md:pl-12 md:w-1/2">
                  <div class="p-5 bg-gray-800/50 rounded-lg border-l-2 border-hacker-green hover:bg-gray-800/70 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white mb-1">Associate Developer</h3>
                    <h4 class="text-hacker-green mb-1">Playbook Sports</h4>
                    <p class="text-gray-400 text-sm mb-3">Hoboken, NJ (Remote)</p>
                    <div class="flex flex-wrap gap-2 mb-4">
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-hacker-green border border-hacker-green/30">n8n</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-hacker-green border border-hacker-green/30">Django</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-hacker-green border border-hacker-green/30">AI/LLM</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-hacker-green border border-hacker-green/30">RAG</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-hacker-green border border-hacker-green/30">Vector DB</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-hacker-green border border-hacker-green/30">Automation</span>
                    </div>
                    <ul class="space-y-2 text-gray-300">
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-hacker-green mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                        <span>Create internal automation solutions and external webapps using n8n to provide AI/LLM functions to most apps</span>
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-hacker-green mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                        <span>Used Django framework to handle a client's request for a standalone scheduler/drafter synced to our base SAAS</span>
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-hacker-green mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                        <span>Made lead generation that runs constantly in the background using n8n to prospect for potential B2B customers</span>
                      </li>
                      <li class="flex items-start">
                        <svg class="w-4 h-4 text-hacker-green mr-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                        <span>Built backend for software wide chatbot made with RAG agent and Vector store database to retrieve FAQs</span>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Experience Item 2 - Pixel8 Web Solutions -->
            <div class="relative mb-12">
              <div class="flex flex-col md:flex-row items-start">
                <!-- Date for mobile (left side) -->
                <div class="md:hidden mb-4 px-4 py-1 bg-gray-800/70 rounded-full text-blue-400 text-sm font-mono">
                  2024
                </div>
                
                <!-- Right column (on desktop) -->
                <div class="hidden md:block md:w-1/2 pr-12 text-right">
                  <div class="p-5 bg-gray-800/50 rounded-lg border-r-2 border-blue-400 hover:bg-gray-800/70 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white mb-1">Backend Development Intern</h3>
                    <h4 class="text-blue-400 mb-1">Pixel8 Web Solutions and Consultancy</h4>
                    <p class="text-gray-400 text-sm mb-3">Remote</p>
                    <div class="flex flex-wrap gap-2 mb-4 justify-end">
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">Django</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">Laravel</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">Ruby on Rails</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">REST API</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">Project Management</span>
                    </div>
                    <ul class="space-y-2 text-gray-300">
                      <li class="flex items-start justify-end">
                        <span>Developing backend systems using REST API on different web frameworks (Django, Laravel, Ruby on Rails)</span>
                        <svg class="w-4 h-4 text-blue-400 ml-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                      </li>
                      <li class="flex items-start justify-end">
                        <span>Created backend API for projects such as To-Do list, Login/Authentication and remade it on different frameworks</span>
                        <svg class="w-4 h-4 text-blue-400 ml-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                      </li>
                      <li class="flex items-start justify-end">
                        <span>Become team leader for fellow interns during my stay and acted as project manager for the team</span>
                        <svg class="w-4 h-4 text-blue-400 ml-2 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                        </svg>
                      </li>
                    </ul>
                  </div>
                </div>
                
                <!-- Timeline dot -->
                <div class="absolute left-[-8px] md:left-1/2 md:ml-[-8px] w-4 h-4 bg-blue-400 rounded-full border-4 border-gray-900 glow-dot"></div>
                
                <!-- Left column (on mobile) -->
                <div class="pl-8 md:hidden">
                  <div class="p-5 bg-gray-800/50 rounded-lg border-l-2 border-blue-400 hover:bg-gray-800/70 transition-all duration-300">
                    <h3 class="text-xl font-bold text-white mb-1">Backend Development Intern</h3>
                    <h4 class="text-blue-400 mb-1">Pixel8 Web Solutions and Consultancy</h4>
                    <p class="text-gray-400 text-sm mb-3">Remote</p>
                    <div class="flex flex-wrap gap-2 mb-4">
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">Django</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">Laravel</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">Ruby on Rails</span>
                      <span class="px-2 py-1 bg-gray-700/70 rounded text-xs font-mono text-blue-400 border border-blue-400/30">REST API</span>
